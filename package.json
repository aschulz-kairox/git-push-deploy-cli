{
  "name": "git-push-deploy-cli",
  "version": "0.6.5",
  "description": "Git Push Deploy - CLI for git-based deployments. Push to bare repos, server hook handles npm install and PM2 restart.",
  "keywords": [
    "git",
    "push",
    "deploy",
    "deployment",
    "pm2",
    "systemd",
    "bare-repo",
    "post-receive",
    "hook",
    "monorepo",
    "cli",
    "gpd"
  ],
  "author": "Andreas Schulz <aschulz@kairox.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aschulz-kairox/git-push-deploy-cli.git"
  },
  "homepage": "https://github.com/aschulz-kairox/git-push-deploy-cli#readme",
  "bugs": {
    "url": "https://github.com/aschulz-kairox/git-push-deploy-cli/issues"
  },
  "type": "module",
  "bin": {
    "git-push-deploy": "./dist/index.js",
    "gpd": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "lint": "eslint src",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "commander": "^13.0.0",
    "chalk": "^5.4.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
